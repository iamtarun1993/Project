<script type="text/javascript">
window.onpageshow = function(event) 
{
  if (event.persisted) 
  {
    window.location="/attendance/attendance"
  }
};

function fun0()
{
$("#d1").hide();
$("#year").hide();
$("#month").hide();
$("#b5").hide();
$("#b6").hide();
$("#h1").append("Attendance");
}


function fun1()
{
	$("#b2").hide();
	$("#d1").show();
	$("#b1").hide();
	$("#month").hide();
	$("#b7").hide();
	$("#b8").hide()
}


function fun2()
{
	window.location = "attendance_update";
}


function fun3()
{
	$("#b4").hide();
	$("#b3").hide();
	$("#year").show();
	$("#month").show();
	$("#b5").show();
	$("#b6").hide();
	$("#h1").empty();
	$("#h1").append("View attendance Monthly");
}


function fun4()
{
	$("#b3").hide();
	$("#b4").hide();
	$("#month").hide();
	$("#year").show();
	$("#b6").show();
	$("#b5").hide();
	$("#h1").empty();
	$("#h1").append("View attendance Yearly");
}

function fun5()
{
	var month=document.getElementById('month').value;
	var year=document.getElementById('year').value;
	//alert(month);
	//alert(year);
	var jsonval={"year":year, "month":month };
  	var values = JSON.stringify(jsonval);
  	//alert(values);
	window.location="attendance_view_month?values=" + values;
}

function fun6()
{
	var year=document.getElementById('year').value;
	alert(year);
	window.location="attendance_view_year?year=" + year;
}

function fun7()
{
	var today = new Date();
	var year = today.getFullYear();
	//alert(year);	
			$.ajax
			({				
  				async: false,
  				type:"POST",
  		  		url:"http://localhost:3000/attendance/sunday",
  		  		dataType:"json",
  		  		data: {year: year},
  		  		success:function(result)
  		  		{
        			alert("Sunday Updated");
        		}
  			});
	
}

</script>


<body onload=fun0()>
<%= render "/admin/header" %>
<h1 id="h1"></h1>
<button id="b1" onclick=fun1()>View attendance</button>
<button id="b2" onclick=fun2()>Update attendance</button>
<button id="b7" onclick=fun7()>Update Sundays</button>
<button id="b8" onclick="window.location.href='holiday'">Update Holidays</button>

<div id="d1" style="display:none;">
<button id="b3" onclick=fun3()>Monthly</button>
<button id="b4" onclick=fun4()>Yearly</button>
</div>

<select id="month">
  <option value="1">January</option>
  <option value="2">February</option>
  <option value="3">March</option>
  <option value="4">April</option>
  <option value="5">May</option>
  <option value="6">June</option>
  <option value="7">July</option>
  <option value="8">August</option>
  <option value="9">September</option>
  <option value="10">October</option>
  <option value="11">November</option>
  <option value="12">December</option>
</select>


<select id="year">
  <option value="2017">2017</option>
  <option value="2018">2018</option>
</select>

<button id="b5" onclick=fun5()>View attendance Monthly</button>
<button id="b6" onclick=fun6()>view attendance Yearly</button>
</body>
